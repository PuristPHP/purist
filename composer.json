{
    "name": "purist/purist",
    "description": "Fully immutable, DIC-less, OOP PHP Framework for building web-applications",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicholas Ruunu",
            "email": "nicholas@ruu.nu"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-pdo": "*",
        "guzzlehttp/psr7": "^1.2",
        "psr/http-message": "^1.0",
        "purist/http-message": "dev-release/1.0.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "doctrine/dbal": "^2.9",
        "react/http": "^0.8.4"
    },
    "require-dev": {
        "phpspec/phpspec": "^6.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
